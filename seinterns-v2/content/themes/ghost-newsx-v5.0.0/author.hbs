{{!< default}}
<div class="main-news-slider section-ptb">
   <div class="container">
      <div class="row">
         <div class="col-lg-8">
            <div class="row">
               <div class="col-md-12">
                  {{#author}}
                  <div class="card mb-3 w-100 mb-4">
                     <div class="row no-gutters">
                        {{#if profile_image}}
                        <div class="col-md-4">
                           <img src="{{profile_image}}" class="card-img" alt="{{name}}">
                        </div>
                        {{/if}} 
                        <div class=" {{#if profile_image}}col-md-8{{else}} col-md-12 {{/if}}" >
                           <div class="card-body">
                              <a href="{{url}}">
                                 <h5 class="card-title">{{name}}</h5>
                              </a>
                              {{#if bio}}
                              <p class="card-text"> {{bio}}</p>
                              {{/if}} 
                              <ul class="author-card-social-link list-inline">
                                 <li class="list-inline-item"><a href="{{twitter_url}}"><i class="fa fa-twitter"></i></a></li>
                                 <li class="list-inline-item"><a href="{{facebook_url}}"><i class="fa fa-facebook-f"></i></a></li>
                                 <li class="list-inline-item"><a href="{{website}}"><i class="fa fa-link"></i></a></li>
                              </ul>
                           </div>
                        </div>
                     </div>
                  </div>
                  {{/author}}
                  <div class="primary-heading">
                     <h4>Author - {{#author}}{{name}} :
                        {{plural ../pagination.total empty=(t "No posts") singular=(t "1 post") plural=(t "% posts")}}{{/author}}
                     </h4>
                  </div>
               </div>
            </div>
            <div class="news-photo-gallery bg-none paddin-left-right-0">
               <div class="row">
                  {{#foreach posts}}
                  <div class="col-sm-6">
                     <div class="photo-gallery-single margin-none">
                        <div class="post-image height-240"
                        style="{{#if feature_image }} background-image:url({{img_url feature_image}}); {{else}} background-image:url({{asset "images/default-img.png"}}); {{/if}}">
                     </div>
                     <div class="photo-gallery-content paddin-none">
                        <h3 class="entry-title"><a href="{{url}}">{{title}}</a></h3>
                        {{excerpt words="15"}}
                     </div>
                  </div>
               </div>
               {{/foreach}}
            </div>
            <div class="row">
               <div class="col">
                  {{pagination}}
               </div>
            </div>
         </div>
      </div>
      <div class="col-lg-4">          
         {{> 'sidebar_post'}}
      </div>
   </div>
</div>
</div>
