{{!< default}}
{{#post}}
<div class="single-post-page pt-75 {{post_class}}">
   <div class="container">
      <div class="row">
         <div class="col-lg-8">
            {{#if access}}
            {{> 'single-post/featured-image'}}
            {{> 'single-post/post-title-content'}}
            {{> 'single-post/post-bottom'}}
            {{> 'single-post/post-author'}}
            {{> 'single-post/post-comment'}}
            {{else}}
            <div class="post-access-full-content container pt-80 pb-80">
               <div class="post-access-content text-center">
                  <p>{{t "You don't have access to this post on "}}<strong>{{@site.title}}</strong> {{t "at the moment, but if
                     you upgrade your
                     account you'll be able to see the whole thing, as well as all the other posts in the
                     archive! Subscribing
                     only takes a few seconds and will give you immediate access."}}
                  </p>
               </div>
               <aside class="post-upgrade-cta mt-3">
                  <div class="post-upgrade-cta-content">
                     {{#if @member}}
                     <h2>{{t "This post is for paying subscribers only"}}</h2>
                     {{else}}
                     <h2>{{t "This post is for subscribers only"}}</h2>
                     {{/if}}
                     <a class="button large primary" href="/signup/">{{t "Subscribe now"}}</a>
                     <p><small>{{t "Already have an account?"}} <a href="/signin/">{{t "Sign in"}}</a></small></p>
                  </div>
               </aside>
            </div>
            {{/if}}

            {{/post}}
         </div>

         <div class="col-lg-4">
            {{> 'sidebar_post'}}
         </div>
      </div>
      <div class="row">
         <div class="col-md-12 py-4">
            <div class="add-image">
               {{> 'ads/ads_big_banner'}}
            </div>
         </div>
      </div>


      <!-- news-photo-gallery -->
      <div class="news-photo-gallery pb-45">
         {{> 'related_posts'}}
      </div>



   </div>
</div>