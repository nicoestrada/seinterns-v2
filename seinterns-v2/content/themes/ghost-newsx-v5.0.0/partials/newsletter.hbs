<div class="subscribe-form member-form">
    <form data-members-form="subscribe" >
        <div class="form-group">
            <input data-members-label type="hidden" value="Early Adopters" />
            <input type="email" class="form-control subscribe-email" data-members-email placeholder="example@email.com"
                autocomplete="true" required/>
            <button class="button btn btn-primary btn-style-2" type="submit">
                <span class="button-content">{{t "Subscribe Now"}}</span>
                <span class="button-loader">{{> "icons/loader"}}</span>
            </button>
        </div>
        <div class="message-success">
            <strong>{{t "Great!"}}</strong> {{t "Check your inbox and click the link to confirm your subscription."}}
        </div>
        <div class="message-error">
            {{t "Please enter a valid email address!"}}
        </div>
    </form>
</div>