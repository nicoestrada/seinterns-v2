<div class="about-author pb-4">
   <div class="primary-heading">
      <h4>{{t "About Author"}}</h4>
      <span class="box"></span>
   </div>
   {{#foreach authors}}
   <div class="card mb-3 w-100 mb-4">
      <div class="row no-gutters">
          {{#if profile_image}}
         <div class="col-md-4">
            <img src="{{profile_image}}" class="card-img" alt="{{name}}">
         </div>
         {{/if}} 
          <div class=" {{#if profile_image}}col-md-8{{else}} col-md-12 {{/if}}" >
         <div class="card-body">
            <a href="{{url}}">
               <h5 class="card-title">{{name}}</h5>
            </a>
            {{#if bio}}<p class="card-text"> {{bio}}</p> {{/if}} 
            <ul class="author-card-social-link list-inline">
               <li class="list-inline-item"><a href="{{twitter_url}}"><i class="fa fa-twitter"></i></a></li>
               <li class="list-inline-item"><a href="{{facebook_url}}"><i class="fa fa-facebook-f"></i></a></li>
               <li class="list-inline-item"><a href="{{website}}"><i class="fa fa-link"></i></a></li>
            </ul>
         </div>
      </div>
   </div>
   </div>

{{/foreach}}  
</div>