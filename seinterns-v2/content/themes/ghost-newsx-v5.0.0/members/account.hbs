{{!< ../default}}

<main class="site-account main-content-area section-padding pt-80 pb-80 clearfix wow fadeIn" data-wow-duration="2s">
    <div class="page-wrapper">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="member-page-content">
                        {{#if @member.paid}}

                        {{!-- Logged in, paying member: Show account info --}}
                        <div class="account-box">
                            <h2 class="account-box-title">{{t "Nice, you're a subscriber!"}}</h2>
                            <p>{{t "Hey!"}} <strong>{{@member.email}}</strong> {{t "has an active"}} {{@site.title}}
                                {{t "account with access to all areas. You're all set, but if you need any help, get in touch with us and we'd be happy to help."}}
                            </p>
                        </div>

                        {{else if @member}}

                        {{!-- Logged in, not paying: Link to checkout --}}
                        <div class="account-box">
                            <h1 class="account-box-title">{{t "Currently, you're not a subscriber"}}</h1>
                            <p>{{t "Hey there! "}}<strong>{{@member.email}}</strong>
                                {{t "is subscribed to free updates from "}}{{@site.title}},{{t " but doesn't have a paid subscription to unlock full access."}}
                            </p>
                            <div class="authbox-signup">
                                <a class="button primary" href="/signup/">
                                    <span class="button-content">{{t "Subscribe now"}}</span>
                                </a>
                            </div>
                        </div>

                        {{else}}

                        {{!-- Not logged in: Redirect to signin --}}
                        <script>window.location = '{{@site.url}}/signin/';</script>

                        {{/if}}
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>

<style type="text/css">
    .footer-top.py-5 {
        display: none;
    }
</style>